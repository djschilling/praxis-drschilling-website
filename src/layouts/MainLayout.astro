---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Hausarztpraxis Dr. Bernd Schilling in Gomaringen',
  description = 'Familiäre Hausarztpraxis in Gomaringen, Lindenstraße 84. Seit über 100 Jahren in dritter Generation für Patientinnen und Patienten da.'
} = Astro.props;

const faviconHref = `${import.meta.env.BASE_URL}favicon.svg`;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1c4f4a" />
    <link rel="icon" type="image/svg+xml" href={faviconHref} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bitter:wght@500;700&family=Manrope:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
